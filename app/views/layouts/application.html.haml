%html
  %head
    %title eko schools
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    - flash.each do |name, msg|
      - if msg.is_a?(String)
        = content_tag :div, msg, :id => "flash_#{name}"
    
    
    %header#pageheader
      #pageheader_inner
        %a#pagelogo{:href => "/"}
    #wrap
      #content-container
        = yield
    %footer#pagefooter
      #pagefooter_inner


